doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Police Department Website
    link(rel="stylesheet" href="/CSS/navbar.css")
    link(rel="stylesheet" href="/CSS/style.css")
    link(rel="shortcut icon" href="/fav-icon_2.png" type="image/x-icon")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css")
    link(rel="stylesheet" href="/CSS/criminals_style.css")
    link(rel="stylesheet" href="/CSS/Expandable-News-card.css")
    link(rel="stylesheet", href="/CSS/Topcarrers.css")
  body
    include navbar 

    .carousel
      // list item
      .list
        .item
          img(src="/Img/Gta_world_10.jpg")
          .content
            .topic= top2criminals[0].name
            .des= `${top2criminals[0].name}, responsible for ${top2criminals[0].noOfCrimes} heinous crimes, has terrorized Los Angeles. A $${top2criminals[0].pricepool} bounty awaits those who bring justice.`
            a(href=`/api/wanted/${top2criminals[0].slug}`) 
              .buttons
                button SEE MORE
        .item
          img(src="/Img/francisco downtown.png")
          .content
            .topic= top2criminals[1].name
            .des= `${top2criminals[1].name}, with a chilling record of ${top2criminals[1].noOfCrimes} brutal offenses, remains a top threat. Help capture and earn a $${top2criminals[1].pricepool} reward.`
            a(href=`/api/wanted/${top2criminals[1].slug}`) 
              .buttons
                button SEE MORE
        .item
          img(src="/Img/Sunset.png")
          .content
            .topic CRIME RATES ARE INCREASING
            .des= top3newss[0].truncatedHeadline
            a(href=`/api/news/${top3newss[0]._id}`) 
              .buttons
                button SEE MORE
        .item
          img(src="/Img/car_1.jpg")
          .content
            .topic CRIME RATES ARE INCREASING
            .des= top3newss[1].truncatedHeadline
            a(href=`/api/news/${top3newss[1]._id}`) 
              .buttons
                button SEE MORE
      // list thumbnail
      .thumbnail
        .item
          img(src="/Img/Helicopter_2.png")
          .content
            .title City's Wanted
            //- .description Description
        .item
          img(src="/Img/Helicopter_1.jpg")
          .content
            .title In Our Sights
            //- .description Description
        .item
          img(src="/Img/Sunset.png")
          .content
            .title City Update
            //- .description Description
        .item
          img(src="/Img/car_1.jpg")
          .content
            .title Breaking Alert
            //- .description Description
      // next prev
      .arrows
        button#prev <
        button#next >

    .container.swiper
      h1 Most Recent News
      .slider-wrapper_1
        .card-list_1.swiper-wrapper
          each x1 in recentnews
            .card-item_1.swiper-slide
              .card_1
                .imgBx_1
                  img(src=`/images/news/${x1.photo}` alt="")
                .content
                  h3 #{x1.truncatedHeadline}
                  h4 Likes #{x1.likes.length} | views #{x1.views}
                  a(href=`/api/news/${x1._id}`) Read More


        .swiper-pagination
        .swiper-slider-button.swiper-button-prev
        .swiper-button-next

    .container.swiper
      h1 Top Criminals
      .slider-wrapper
        .card-list.swiper-wrapper
          each x2 in topcriminals
            .card-item.swiper-slide
              .card
                .number
                .circle
                .content
                  h3 #{x2.name}
                  a(href=`/api/wanted/${x2.slug}`) Read More
                img(src=`/images/criminals/${x2.photo}` alt="")

        .swiper-pagination
        .swiper-slider-button.swiper-button-prev
        .swiper-button-next

    .container.swiper
        h1 Highest Paided Jobs
        .slider-wrapper_3
          .card-list_3.swiper-wrapper
            each item in highestPaidJobs
              .card-item_3.swiper-slide
                .card_3
                  img(src="/Img/car.jpg" alt="")
                  .content
                    h3= item.title
                    h4 Salary - #{item.salary}
                    a(href=`/api/career/${item.slug}`) Read More
            
          .swiper-pagination
          .swiper-slider-button.swiper-button-prev
          .swiper-button-next

      
    script(src="app.js")
    script(src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js")
    script(src="/js/overview.js")
    script(src="/js/navbar.js")